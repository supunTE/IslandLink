{
  "extends": ["plugin:react/recommended", "prettier"],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "curly": ["error", "all"],
    "max-nested-callbacks": ["error", 3],
    "prefer-const": "error",
    "arrow-parens": ["error", "always"],
    "no-var": "error",
    "no-console": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-duplicate-imports": "error",
    "prettier/prettier": ["error"],
    "react/react-in-jsx-scope": "off"
  }
}
